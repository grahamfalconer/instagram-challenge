<h1 class="title"> Instagraham Posts </h1>
<% @posts.each do |post| %>
  <div class="hero-body">
    <div class="container">
        <h1><%= post.title %></h1>
        <p>Posted: <%= post.created_at.strftime("%B %d %Y, %l:%M%P") %></p>
        <figure class ="image is-100x100">
        <p><%= image_tag(post.image, style:'width:50%') %></p>
        <p><%= post.content %></p>
        <hr size="20">
    </div>
  </div>
<% end %>

